<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryDark" />

    <mvp.larin.cash.larinmvp.utils.widgets.textview.TextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Larin"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/textViewBold" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/cardView" >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <com.mikhaellopez.circularimageview.CircularImageView
              android:layout_width="75dip"
              android:layout_height="75dip"
              android:layout_margin="5dp"
              android:src="@drawable/profile_sample"
              app:civ_border_color="@color/colorPrimary"
              app:civ_border_width="2dp"
              app:civ_shadow="true"
              app:civ_shadow_radius="10"
              app:civ_shadow_color="@color/colorPrimaryDark"
              android:id="@+id/circularImageView" />

          <TextView
              android:id="@+id/account_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#212121"
              android:textSize="15sp"
              android:layout_alignTop="@+id/circularImageView"
              android:layout_toEndOf="@+id/circularImageView"
              android:text="Alireza G.Kian" />

          <TextView
              android:id="@+id/wallet_id"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/account_name"
              android:layout_toEndOf="@+id/circularImageView"
              android:text="0x21f79b98db4d40ca1a1dc485f3db1bedfc17e8ae"
              android:textSize="10sp" />

          <TextView
              android:id="@+id/wallet_type"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="15dp"
              android:layout_alignBottom="@+id/circularImageView"
              android:layout_toEndOf="@+id/circularImageView"
              android:text="Personal Wallet Account"
              android:textSize="12sp" />

          <TextView
              android:id="@+id/balance"
              android:textColor="@color/colorPrimary"
              android:textSize="20sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="16dp"
              android:text="140000 Rials"
              android:textStyle="bold" />
      </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/textViewBold"
        android:layout_alignStart="@+id/cardView"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/ic_menu" />

</RelativeLayout>